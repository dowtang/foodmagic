<!DOCTYPE html>
<html>
<head>
  <title>Foodmagic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div class="container">

      <header id="header" class="header">
        <div class="row">
          <div class="logo">
            FoodMagic
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3">
            header left
          </div>
          <div class="col-xs-6">
            header center
          </div>
          <div class="col-xs-3">
            header right
          </div>
        </div>
      </header>

      <main id="main" class="main">
        <div class="row">
          <%= yield %>
        </div>
      </main>

      <footer id="footer" class="footer">
        <div class="row">
          <div class="col-xs-3">
            footer 1 title
          </div>
          <div class="col-xs-3">
            footer 2 title
          </div>
          <div class="col-xs-3">
            footer 3 title
          </div>
          <div class="col-xs-3">
            footer 4 title
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3">
            footer 1
          </div>
          <div class="col-xs-3">
            footer 2
          </div>
          <div class="col-xs-3">
            footer 3
          </div>
          <div class="col-xs-3">
            footer 4
          </div>
        </div>
      </footer>

    </div>
  </body>
</html>
