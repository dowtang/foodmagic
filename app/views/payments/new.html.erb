<!-- this is our checkout page -->

<div class="row review-order-text">

  <div class="col-xs-10 col-xs-offset-1 review-order-box">
  
    <div class="row review-order-dark-grey">
      <div id="your-order-heading-payment">
        Review Your Order
      </div>
    </div>

    <div class="row">
      <table class="table table-white table-hover">
        <thead>
          <tr>
            <th class="quantity-dish">Quantity</th>
            <th></th>
            <th>Dish Name</th>
            <th>Size</th>
            <th>Price</th>
          </tr>
        </thead>
          <tbody>
            <% @variations.each do |variation| %>
              <tr>
                <td class="quantity-dish">
                  1
                </td>
                <td>
                  <button type="button" class="btn btn-default btn-xs">
                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                  </button>
                  <button type="button" class="btn btn-default btn-xs">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  </button>
                </td>
                <td class="important-text">
                  <%= variation.dish.name %>
                </td>
                <td class="important-text">
                  <%= variation.size %>
                </td>
                <td class="important-text">
                  <%= variation.price%>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>

</div>

  <%#= form_tag payments_path do %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    
    <div class="info-box">
      <div class="info-box-grey important-text">
        Your contact details
      </div>
      <div class="info-box-white">
        <p>
          Please fill in the form.
        </p>

        <form class="form-horizontal">
          <div class="form-group">
            <label for="inputFirstName" class="col-sm-2 control-label">First name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputFirstName" placeholder="First name">
            </div>
          </div>

          <div class="form-group">
            <label for="inputLastName" class="col-sm-2 control-label">Last name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputLastName" placeholder="Last name">
            </div>
          </div>

          <div class="form-group">
            <label for="inputAddress" class="col-sm-2 control-label">Address</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputAddress" placeholder="Address">
            </div>
          </div>

          <div class="form-group">  
            <label for="inputEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputEmail" placeholder="Email">
            </div>
          </div>
          
          <div class="form-group">  
            <label for="inputMobile" class="col-sm-2 control-label">Mobile</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputMobile" placeholder="Mobile">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="payment-box">    
      <div class="col-xs-12">
        Amount: $65.00
      </div>
      <div class="col-xs-12 payment-btn">
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="A month's subscription" data-amount="500">s
        </script>
      </div>
      <%# end %>
    </div>
  </div>
</div>    
