<div class="row">
  <div class="col-xs-2">
  </div>
  <h3 class="col-xs-8 bold-text">Order from 30 restaurants in Central</h3>
  <div class="col-xs-2">
  </div>
</div>

<div>
  <div class="row">

      <div class="col-xs-2">
      </div>

      <div class="col-xs-8 restaurant-white-box">


        <!-- I WANT TO REPEAT THIS CODE FOR EACH ONE OF THE RESTAURANTS -->
      <% @restaurants.each do |restaurant| %>

        <div class="row restaurant-box">
          <div class="col-xs-12">
          <!-- Restaurant Header -->
            <div class="row restaurant-header">
              <div class="col-xs-12 restaurant-name">
              <%= restaurant.name %>
              </div>
              <div class="col-xs-8 restaurant-location">
                <%= restaurant.location %>
              </div>
              <div class="col-xs-3 review-count">
                <%= restaurant.reviewcount %>
              </div>
            </div>

            <!-- Restaurant Main -->
            <div class="row restaurant-main">

              <div class="col-xs-2 logo-img">
                <%= image_tag ("logo/shanghai.png") %>
              </div>

              <div class="col-xs-6 restaurant-info">
                <p>
                  <span class="restaurant-cuisine-type"><%= restaurant.cuisinetype %></span>
                </p>
                <p>
                  <span class="restaurant-info-title">Delivery in:</span>
                  <%= restaurant.deliverytime %>
                </p>
                <p>
                  <span class="restaurant-info-title">Delivery cost:</span>
                  <%= restaurant.deliverycost %>
                </p>
                <p>
                  <span class="restaurant-info-title">Delivery min:</span>
                  <%= restaurant.minimumorder %>
                </p>
                <p>
                  <span class="restaurant-info-title">Payment time:</span>
                  <%= restaurant.paymenttype %>
                </p>
              </div>
        
              <div class="col-xs-4">
                <button class="btn btn-lg btn-success">
                  Go to Menu
                </button>
                <%#= button_to "Menu", menu_path, method: :get, :class="btn btn-sm btn-success" %>
              </div>
            </div>
          </div>
        </div>

      <!-- THIS IS THE END OF MY SINGLE RESTAURANT (GREY BOX) -->
      <% end %>

      </div>  

      <div class="col-xs-2">
      </div>
    </div>
  </div>

</div>

